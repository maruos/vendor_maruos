<devices>
    <!--
        NOTE: These names are space sensitive and are used exactly as is when
        comparing to EVIOCGNAME ioctl on the device fd.

        "Bluetooth Keyboard" is NOT the same as "Bluetooth  Keyboard"
    -->

    <!--
        Disable bluetooth mice
    -->

    <!-- Tonor TM Updated Version Ultra Slim Bluetooth 3.0 Wireless Mouse -->
    <device name="Bluetooth Mouse" />

    <!--
        Disable bluetooth keyboards
    -->

    <!-- Jelly Comb Universal Bluetooth Keyboard Ultra Slim -->
    <!-- Note the extra space in the name -->
    <device name="Bluetooth  Keyboard" />

</devices>
